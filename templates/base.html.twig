<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>

        <div class="content" up-main>
            <nav>
                <a up-follow up-preload href="{{ url('index') }}">Index</a>
                <a up-follow up-preload up-clear-cache href="{{ url('page') }}">Page</a>
                <a up-follow up-preload href="{{ url('about') }}">About</a>
                <a up-follow up-preload href="{{ path(app.request.get('_route'), {'_locale': "fr"}) }}">fr</a>
                <a up-follow up-preload href="{{ path(app.request.get('_route'), {'_locale': "de"}) }}">de</a>
                <a up-follow up-preload href="{{ path(app.request.get('_route'), {'_locale': "it"}) }}">it</a>
            </nav>
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
